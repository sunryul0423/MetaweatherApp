<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/item_header_padding</item>
        <item name="android:paddingBottom">@dimen/item_header_padding</item>
        <item name="android:textSize">@dimen/item_local_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
